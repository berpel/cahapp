/*
 * Import nib
 */
@import 'nib'


/*
 * Grab a custom font from Google
 */
//@import url('http://fonts.googleapis.com/css?family=Quicksand')

/*
 * Nib provides a CSS reset
 */
global-reset()

html, body
  height 100%
  width 100%

body
  background #f4f4f4
  font Arial, Helvetica, sans-serif
  overflow hidden

article
  height 100%
  position relative
  width 100%
  section
    absolute top left
    height 100%
    transition .3s linear
    overflow hidden
    width 100%

    header
      background #333
      padding 10px

    &.settings
      background #444
      color #fff
      width: 90%
      header
        text-align center

    &.cards
      background #fff
      &.right
        transform translate(90%, 0)
      header
        button
          border 1px solid #000

      .rn-carousel-container
        bottom 0
        left 0
        position absolute
        right 0
        top 44px
        //width 100%

      .rn-carousel-slides
        height 100%

      /*.frames
        bottom 0
        left 0
        position absolute
        top 44px
        right 0

      .frame
        absolute top left
        height 100%
        width 100%
        &.right
          transform translate(100%, 0)
      */

      .card
        background-color #fff
        background-image linear-gradient(#ffffff 0%, #f7f7f7 100%)
        border 2px solid rgba(27,128,236,0.0)
        border-radius 1.2em
        box-shadow 0px 2px 2px rgba(0,0,0,0.3), 0px 2px 20px rgba(0,0,0,0.07), 0px 1px 0px rgba(255,255,255,0.1) inset, 0 1px 4px rgba(0, 0, 0, 0.27), 0 0 40px rgba(0, 0, 0, 0.02) inset
        height 90%
        margin-top 5%
        margin-left 5%
        width 90%
        p
          font-family "HelveticaNeue-Bold", "Helvetica Neue Bold", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif
          font-size 30px
          font-weight 300
          margin 20px
